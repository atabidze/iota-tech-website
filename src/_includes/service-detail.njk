{% extends "base.njk" %}

{% block content %}
<section class="page-section service-detail-page">
    <div class="container">

        <div class="section-title text-center" data-aos="fade-up">
            <h1>{{ title }}</h1>
            <div class="page-content" style="max-width: 800px; margin: 0 auto;">
                {{ general_description | markdownify | safe }}
            </div>
        </div>

        {% if detailed_list and detailed_list.length > 0 %}
        <div class="feature-timeline">
            {# --- ანიმაციის კონტეინერი --- #}
            <div class="optic-fiber-animation">
                <div class="fiber-cables"></div>
                <div class="data-packets">
                    <span class="packet down orange t1"></span><span class="packet down orange t1"></span><span class="packet down orange t1"></span>
                    <span class="packet up cyan t2"></span><span class="packet up cyan t2"></span><span class="packet up cyan t2"></span>
                    <span class="packet down orange t3"></span><span class="packet down orange t3"></span><span class="packet down orange t3"></span>
                    <span class="packet up cyan t4"></span><span class="packet up cyan t4"></span><span class="packet up cyan t4"></span>
                    <span class="packet down orange t5"></span><span class="packet down orange t5"></span><span class="packet down orange t5"></span>
                    <span class="packet up cyan t6"></span><span class="packet up cyan t6"></span><span class="packet up cyan t6"></span>
                </div>
            </div>

            {# --- ბარათების გამოტანა ციკლში --- #}
            {% for item in detailed_list %}
                <div class="feature-section" data-aos="fade-up">
                    <div class="feature-visual">
                        <div class="feature-icon">
                            {% lucide item.icon %}
                        </div>
                    </div>
                    <div class="feature-text glass-panel">
                        <h3 class="feature-title">{{ item.point }}</h3>
                        {% if item.description %}
                        <p class="feature-desc">{{ item.description }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}

    </div>
</section>
{% endblock %}
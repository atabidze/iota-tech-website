{% extends "base.njk" %}

{% block content %}
<section class="page-section service-detail-page">
    <div class="container">
        <div class="detail-page-layout">
            
            <aside class="detail-page-sticky-info" data-aos="fade-right">
                <h1 class="detail-page-title">{{ title }}</h1>
                <div class="detail-page-description page-content">
                    {{ general_description | markdownify | safe }}
                </div>
            </aside>

            <main class="detail-page-cards">
                {% if detailed_list and detailed_list.length > 0 %}
                    {% for item in detailed_list %}
                        <div class="feature-card-new glass-panel" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
                            <div class="feature-card-header">
                                <div class="feature-card-icon">
                                    {% lucide item.icon %}
                                </div>
                                <h3 class="feature-card-title">{{ item.point }}</h3>
                            </div>
                            <hr class="feature-card-divider">
                            <div class="feature-card-body">
                                {% if item.description %}
                                <p>{{ item.description }}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </main>

        </div>
    </div>
</section>
{% endblock %}
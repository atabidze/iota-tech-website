{% extends "base.njk" %}

{% block content %}
<section class="page-section service-detail-page">
    <div class="container">
        <div class="solutions-grid">
            {# --- მარცხენა, "წებოვანი" სვეტი --- #}
            <div class="solutions-sticky-content" data-aos="fade-right">
                <h1 class="solutions-title">{{ title }}</h1>
                <div class="solutions-description page-content">
                    {{ general_description | markdownify | safe }}
                </div>
            </div>

            {# --- მარჯვენა, "სქროლვადი" სვეტი --- #}
            {% if detailed_list and detailed_list.length > 0 %}
            <div class="solutions-scrolling-cards" data-aos="fade-left" data-aos-delay="200">
                {% for item in detailed_list %}
                    {# --- გასწორდა მონაცვლეობითი კლასის ლოგიკა --- #}
                    {% set card_style = 'card-style-a' if loop.index0 % 2 == 0 else 'card-style-b' %}
                    <div class="feature-card-item {{ card_style }}">
                        <div class="feature-card-header">
                            <div class="feature-card-icon">
                                {% lucide item.icon %}
                            </div>
                            <h3 class="feature-card-title">{{ item.point }}</h3>
                        </div>
                        <hr class="feature-card-divider">
                        {% if item.description %}
                        <div class="feature-card-body">
                            <p>{{ item.description }}</p>
                        </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
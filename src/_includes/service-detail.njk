---
layout: base.njk
---
<section class="service-detail-section">
    <div class="container">
        <div class="service-detail-header" data-aos="fade-up">
            <div class="category-title-wrapper">
                {% if icon %}
                    <i data-lucide="{{ icon }}"></i>
                {% endif %}
                <h1>{{ title }}</h1>
            </div>
        </div>
        <div class="service-detail-content">
            <ul class="main-description-list" data-aos="fade-up" data-aos-delay="100">
                {% for item in detailed_list %}
                    <li class="glass-panel">{{ item.point }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</section>
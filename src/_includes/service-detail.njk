<section class="page-section service-detail-page">
    <div class="container content-container">

        {# --- სათაურის ბლოკი იკონით --- #}
        <div class="service-detail-header" data-aos="fade-up">
            {% if icon %}
            <div class="service-detail-icon">
                {% include "animated-icons/" + icon + ".svg" %}
            </div>
            {% endif %}
            <h1>{{ title }}</h1>
        </div>

        {# --- ზოგადი აღწერის ბლოკი --- #}
        <div class="service-detail-card glass-panel" data-aos="fade-up" data-aos-delay="100">
            <div class="page-content">
                {{ general_description | markdownify | safe }}
            </div>
        </div>

        {# --- დეტალური სიის ბლოკი (თუ არსებობს) --- #}
        {% if detailed_list and detailed_list.length > 0 %}
        <div class="service-detail-card glass-panel" data-aos="fade-up" data-aos-delay="200">
            {# სათაურის ლოკალიზაცია #}
            {% if lang == 'ka' %}
                <h2 class="card-section-title">ძირითადი მახასიათებლები</h2>
            {% else %}
                <h2 class="card-section-title">Key Features</h2>
            {% endif %}
            
            <ul class="service-detailed-list">
                {% for item in detailed_list %}
                <li>{{ item.point }}</li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

    </div>
</section>
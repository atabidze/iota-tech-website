---
layout: base.njk
---
<section class="service-detail-section">
    <div class="container">
        <div class="service-detail-header" data-aos="fade-up">
            <div class="category-title-wrapper">
                {% if icon %}
                    <div class="icon-bg lavender">
                         {% include "animated-icons/" + icon + ".svg" %}
                    </div>
                {% endif %}
                <h1>{{ title }}</h1>
            </div>
        </div>
        <div class="service-detail-content">
            <div class="main-description" data-aos="fade-up" data-aos-delay="100">
                {{ content | safe }}
            </div>
        </div>
    </div>
</section>
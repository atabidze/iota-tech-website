{% extends "base.njk" %}

{% block content %}
<section class="page-section service-detail-page">
    <div class="container">

        <div class="section-title text-center" data-aos="fade-up">
            <h1>{{ title }}</h1>
            <div class="page-content" style="max-width: 800px; margin: 0 auto;">
                {{ general_description | markdownify | safe }}
            </div>
        </div>

        {% if detailed_list and detailed_list.length > 0 %}
        <div class="services-grid" data-aos="fade-up" data-aos-delay="200">
            {% for item in detailed_list %}
            {# --- დაემატა ანიმაციის ატრიბუტები --- #}
            <div class="service-card glass-panel" data-aos="fade-right" data-aos-delay="{{ loop.index0 * 100 }}">
                <div class="card-header">
                    {% if item.icon %}
                    <div class="card-icon">
                        {% lucide item.icon %}
                    </div>
                    {% endif %}
                    <h3 class="card-title">{{ item.point }}</h3>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}

    </div>
</section>
{% endblock %}
<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  
  <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}">
</head>
<body>

  <div id="tsparticles-bg"></div>

  <header class="site-header glass-panel">
    <div class="container header-container">
      {# --- პრობლემა 3-ის შესწორება: ენის პრეფიქსის განსაზღვრა --- #}
      {% set lang_prefix = '' if lang == 'ka' else '/en' %}
      
      <a href="{{ lang_prefix }}/" class="logo">{{ settings.logo_text }}</a>

      {# --- პრობლემა 3-ის შესწორება: ნავიგაციის ბმულები იყენებენ ენის პრეფიქსს --- #}
      <nav class="desktop-nav">
        <a href="{{ lang_prefix }}/">{{ ka.nav.home if lang == 'ka' else en.nav.home }}</a>
        <a href="{{ lang_prefix }}/services/">{{ ka.nav.services if lang == 'ka' else en.nav.services }}</a>
        <a href="{{ lang_prefix }}/about/">{{ ka.nav.about if lang == 'ka' else en.nav.about }}</a>
        <a href="{{ lang_prefix }}/contact/">{{ ka.nav.contact if lang == 'ka' else en.nav.contact }}</a>
      </nav>

      <div class="header-controls">
        {# --- პრობლემა 1 და 2-ის შესწორება: ენის გადამრთველის ახალი ლოგიკა --- #}
        <div class="lang-switcher">
          {% set alternatePageUrl = '' %}
          {% for item in collections.all %}
            {% if item.fileSlug == fileSlug and item.data.lang != lang %}
              {% set alternatePageUrl = item.url %}
            {% endif %}
          {% endfor %}
          
          {% if lang == 'ka' %}
            {% set targetUrl = alternatePageUrl or '/en/' %}
            {% set targetLabel = en.lang_label %}
            <a href="{{ targetUrl }}">
              {% include "icons/globe.svg" %}
              <span>{{ targetLabel }}</span>
            </a>
          {% else %}
            {% set targetUrl = alternatePageUrl or '/' %}
            {% set targetLabel = ka.lang_label %}
             <a href="{{ targetUrl }}">
              {% include "icons/globe.svg" %}
              <span>{{ targetLabel }}</span>
            </a>
          {% endif %}
        </div>
        <button class="mobile-nav-toggle" aria-controls="main-nav" aria-expanded="false"></button>
      </div>
    </div>
  </header>

  {# --- პრობლემა 3-ის შესწორება: მობილური ნავიგაციის ბმულები --- #}
  <nav class="mobile-nav" id="main-nav" data-visible="false">
    <a href="{{ lang_prefix }}/">{{ ka.nav.home if lang == 'ka' else en.nav.home }}</a>
    <a href="{{ lang_prefix }}/services/">{{ ka.nav.services if lang == 'ka' else en.nav.services }}</a>
    <a href="{{ lang_prefix }}/about/">{{ ka.nav.about if lang == 'ka' else en.nav.about }}</a>
    <a href="{{ lang_prefix }}/contact/">{{ ka.nav.contact if lang == 'ka' else en.nav.contact }}</a>
  </nav>

  <main>
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>{{ settings.footer_text }}</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/tsparticles@2.9.3/tsparticles.bundle.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      AOS.init({ duration: 800, once: true });
      const mobileNavToggle = document.querySelector('.mobile-nav-toggle');
      const mobileNav = document.querySelector('.mobile-nav');
      const particlesBg = document.getElementById('tsparticles-bg');
      const closeMenu = () => {
        mobileNav.setAttribute('data-visible', 'false');
        mobileNavToggle.setAttribute('aria-expanded', 'false');
        particlesBg.style.zIndex = '-1';
      };
      const openMenu = () => {
        mobileNav.setAttribute('data-visible', 'true');
        mobileNavToggle.setAttribute('aria-expanded', 'true');
        particlesBg.style.zIndex = '998';
      };
      mobileNavToggle.addEventListener('click', () => {
        const isVisible = mobileNav.getAttribute('data-visible');
        if (isVisible === 'true') {
          closeMenu();
        } else {
          openMenu();
        }
      });
      window.addEventListener('scroll', () => {
        if (mobileNav.getAttribute('data-visible') === 'true') {
          closeMenu();
        }
      });
      tsParticles.load("tsparticles-bg", {
        "fullScreen": { "enable": false },
        "background": { "color": { "value": "#121212" }},
        "particles": { "number": { "value": 80, "density": { "enable": true, "value_area": 800 }}, "color": { "value": "#e84a5f" }, "shape": { "type": "circle" }, "opacity": { "value": 0.5, "random": true, "anim": { "enable": true, "speed": 1, "opacity_min": 0.1, "sync": false }}, "size": { "value": 2, "random": true }, "line_linked": { "enable": true, "distance": 150, "color": "#333333", "opacity": 0.4, "width": 1 }, "move": { "enable": true, "speed": 1, "direction": "none", "out_mode": "out" }},
        "interactivity": { "detect_on": "window", "events": { "onhover": { "enable": true, "mode": "bubble" }, "onclick": { "enable": true, "mode": "push" }}, "modes": { "bubble": { "distance": 250, "size": 4, "duration": 2, "opacity": 1 }, "push": { "particles_nb": 4 }}}, "retina_detect": true
      });
    });
  </script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>